@{
    ViewData["Title"] = "Sign In Page";
}

<form action="/Sessions" method="post">
  <fieldset>
    <legend>Sign In:</legend>
    <div>
      <label>Email:<input type="email" name="email" /></label>

    </div>
     <div>
      <label>Password:<input type="password" name="password" /></label>
    </div>
    <div>
      <input type="submit" value="Submit" class="submit" />
    </div> 
    @{
      string message = "";
      if(ViewBag.LoginFailed == true && ViewBag.email == null){
        message = "Cannot find email address provided. Please register your details first.";
      }
    } 
    <p>@message</p>
  </fieldset>
</form>

<div class=" mt-5 d-flex ">
    <a class="nav-link text-dark col-sm" asp-area="" asp-controller="Users" asp-action="New">Sign Up</a>
</div>
